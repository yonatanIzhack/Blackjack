    <Button
        android:id="@+id/standButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_alignParentRight="true"
        android:text="Stand"
        android:textSize="18sp"
        android:textAllCaps="false"
