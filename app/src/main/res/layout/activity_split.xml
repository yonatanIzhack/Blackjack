        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_alignParentLeft="true"
        android:text="Hit"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
